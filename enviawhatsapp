<!DOCTYPE html>
<html lang="pt-br">
<head>
<script>
function enviarWhatsApp() {
    let nome = document.getElementById("nome").value;
    let mensagem = document.getElementById("mensagem").value;
    let numero = "5531988307073"; // Substitua pelo n√∫mero desejado
    let url = `https://wa.me/${numero}?text=Nome:%20${nome}%0AMensagem:%20${mensagem}`;
    window.open(url, "_blank");
}
</script>
</head>
<body>
<form id="meuFormulario">
    <input type="text" id="nome" placeholder="Seu nome"></p>
    <input type="text" id="mensagem" placeholder="Sua mensagem"></p>
    <button type="button" onclick="enviarWhatsApp()">Enviar para WhatsApp</button>
</form>
</body>
</html>
